<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2C3FF"
    android:layout_gravity="center"
    tools:context=".ColeccionablesFragment">

    <!-- Gema (ImageView que se hace clic para activar el video) -->
    <ImageView
        android:id="@+id/gemaImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="Gema"
        android:src="@drawable/gem" />

    <!-- VideoView que se usará para reproducir el video -->
    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <TextView
        android:id="@+id/bocadillo_info"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:layout_marginTop="0dp"
        android:background="@drawable/bocadillo_shape"
        android:gravity="center"
        android:padding="20dp"
        android:text="Aquí podrás explorar los coleccionables de Spyro the Dragon!. \n\n Haz click para finalizar tutorial"
        android:textColor="#FFFFFF"
        android:textSize="18sp"/>
</FrameLayout>
